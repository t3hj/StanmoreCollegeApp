<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stanmore_App.AssignmentsPage"
             BackgroundImageSource="Upcoming_Assignments">
    
    <ContentPage.Content>
        <StackLayout  VerticalOptions="Fill">
            <Grid>

                <Image Source="College_logo" HeightRequest="50" TranslationX="0" TranslationY="-40"/>

                <StackLayout Margin="50,100,50,50">


                    <ScrollView VerticalOptions="FillAndExpand" TranslationY="0" >

                        <StackLayout HorizontalOptions="StartAndExpand">
                            <StackLayout Margin="10">

                                
                            </StackLayout>
                        </StackLayout>

                    </ScrollView>


                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>